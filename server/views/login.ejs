<%- include partials/header.ejs %>
<main class="container">
  <div class="page-header" id="title">Please Login</div>
  <div class="jumbotron">
    <% if (messages.length > 0) { %>
    <div class="alert alert-danger"><%= messages %></div>
    <% } %>
    <form method="post" >
    <fieldset class="form-group" class="sr-only">
      <label>Username:</label>
      <input type="text" class="form-control" id="loginForm"name="username" required autofocus/>
    </fieldset>
    <fieldset class="form-group">
      <label>Password:</label>
      <input type="password" class="form-control" id="loginForm" name="password" required/>
      or <a href="/register">Register</a>
    </fieldset>
    <fieldset class="form-group ">
      <input type="submit" class="btn btn-danger" value="Login"/>
    </fieldset>
    </form>
  </div>
</main>
<% include partials/boot.ejs %>
<% include partials/footer.ejs %>
